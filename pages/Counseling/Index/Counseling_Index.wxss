/* pages/consult/consult.wxss */
.container {
  padding:1rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.consultant-info {
  padding: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
}

.title {
  font-size: 24rpx;
  color: #666;
}

.no-consultant {
  padding: 40rpx;
  text-align: center;
  color: #999;
}

.chat-container {
  flex: 1;
  padding: 20rpx;
  background: #f5f5f5;
}

.message-item {
  margin: 20rpx 0;
}

.message {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 10rpx;
  position: relative;
}

.message.consultant {
  background: white;
  margin-right: auto;
}

.message.user {
  background: #95ec69;
  margin-left: auto;
}

.time {
  position: absolute;
  right: 10rpx;
  bottom: -30rpx;
  font-size: 20rpx;
  color: #666;
}

.input-area {
  padding: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eee;
}

.input {
  flex: 1;
  padding: 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 50rpx;
  margin-right: 20rpx;
}

.send-btn {
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  background: #07c160;
  color: white;
  font-size: 28rpx;
}