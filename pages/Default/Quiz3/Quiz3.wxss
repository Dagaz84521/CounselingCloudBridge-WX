/* pages/Default/Quiz3/Quiz3.wxss */
/* 基础容器 */
.container {
  padding: 20rpx;
  background: white;
}

/* 题目样式 */
.question-box {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.q-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
}

/* 选项按钮 */
.options {
  display: flex;
  margin-top: 20rpx;
}

.option-btn {
  width: 22%;
  height: 100rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background: white;
  color: #666;
}

.option-btn.active {
  background: #07c160;
  color: white;
}

/* 提交按钮 */
.submit-btn {
  width: 90%;
  margin: 40rpx auto;
  background: #07c160;
  color: white;
}