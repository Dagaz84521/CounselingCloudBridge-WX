/* pages/QuizMain/QuizMain.wxss */
.container {
  padding: 20px;
}

.questionnaire-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
  width: 100%;
}

.questionnaire-card {
  display: flex;
  align-items: center;
  padding: 15px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.questionnaire-icon {
  width: 50px;
  height: 50px;
  margin-right: 15px;
}

.questionnaire-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px; /* 增加标题和描述之间的间距 */
}

.questionnaire-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  text-align: left; /* 确保左对齐 */
}

.questionnaire-description {
  font-size: 14px;
  color: #666;
  text-align: left; /* 确保左对齐 */
  white-space: normal; /* 允许换行 */
  word-wrap: break-word; /* 长单词换行 */
}