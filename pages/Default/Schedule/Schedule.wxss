/* pages/Default/Schedule/Schedule.wxss */
.container {
    padding: 20rpx;
    display: inline;
}

.therapist-list {
    display: block;
    /* 确保为块级布局 */
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    position:relative;
}

.therapist-card {
    display: flex;
    /* 保持flex布局 */
    flex-direction: row;
    /* 内部横向排列 */
    width: 100% !important;
    /* 强制宽度 */
    margin-bottom: 30rpx;
    background: #fff;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    padding: 30rpx;
    box-sizing: border-box;
    overflow: hidden;
    position: relative;
    /* 防止内容溢出 */
}

.status-icon {
    position: absolute;
    right: 40rpx;
    bottom: 40rpx;
    width: 60rpx;
    height: 60rpx;
    z-index: 10;
}

.avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-right: 30rpx;
    flex-shrink: 0;
    /* 防止图片被压缩 */
}

.info {
    flex: 1;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.name-rating {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.name {
    font-size: 32rpx;
    font-weight: bold;
}

.rating {
    color: #f7b500;
}

.expertise {
    color: #666;
    font-size: 28rpx;
    margin-bottom: 15rpx;
}

.experience {
    color: #999;
    font-size: 24rpx;
}

/* 筛选栏样式 */
.filter-bar {
    background: #fff;
    padding: 20rpx 30rpx;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 搜索框样式 */
.search-box {
    position: relative;
    background: #f5f5f5;
    border-radius: 40rpx;
    padding: 0 30rpx;
    display: flex;
    align-items: center;
    height: 80rpx;
    margin-bottom: 20rpx;
}

.search-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 15rpx;
}

.clear-icon {
    width: 36rpx;
    height: 36rpx;
    margin-left: auto;
}

.placeholder-style {
    color: #ccc;
    font-size: 28rpx;
}

/* 筛选行样式 */
.filter-row {
  display: flex;
  justify-content: space-between;
  align-items: center; /* 新增垂直居中 */
  height: 72rpx; /* 设置固定高度 */
}

/* 排序选择器 */
.sort-picker {
  height: 100%; /* 继承父级高度 */
  display: flex;
  align-items: center; /* 内容垂直居中 */
}

.picker-content {
  font-size: 26rpx;
  color: #666;
  padding: 0 20rpx; /* 增加左右间距 */
  display: flex;
  align-items: center;
  height: 100%; /* 继承父级高度 */
}

.arrow-icon {
    width: 24rpx;
    height: 24rpx;
    margin-left: 10rpx;
}

/* 状态过滤标签 */
.status-filter {
  display: flex;
  align-items: center; /* 新增垂直居中 */
  height: 100%; /* 继承父级高度 */
}

.filter-tag {
  padding: 16rpx 24rpx; /* 调整上下间距 */
  font-size: 26rpx;
  line-height: 1; /* 防止文字行高影响 */
  border-radius: 30rpx;
  height: 56rpx; /* 计算值：父级72rpx - 上下各8rpx间隙 */
  display: flex;
  align-items: center; /* 文字垂直居中 */
}

.filter-tag.active {
    background: #07c160;
    color: #fff;
}
