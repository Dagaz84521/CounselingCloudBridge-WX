<!--pages/User/AccountSetting/AccountSetting.wxml-->
<view class="container">
  <!-- 修改个人信息 -->
  <view class="item" bindtap="navigateToPersonalInfo">
    <image src="/images/用户.png" class="arrow"></image>
    <text>修改个人信息</text>
  </view>

  <!-- 手机号 -->
  <view class="item">
    <text class="label">手机号: {{phone}}</text>
    <button class="modify-btn" bindtap="navigateToChangePhone">修改手机号</button>
  </view>

  <!-- 密码 -->
  <view class="item">
    <text class="label">密码: {{password}}</text>
    <button class="modify-btn" bindtap="navigateToChangePassword">修改密码</button>
  </view>
</view>