<!--pages/User/ChangePhone/ChangePassword.wxml-->
<view class="container">
  <form bindsubmit="onSubmit">
    <!-- 旧密码 -->
    <view class="form-item">
      <label>旧密码:</label>
      <view class="input-container">
        <input
          type="{{showOldPassword ? 'text' : 'password'}}"
          name="oldPassword"
          placeholder="请输入旧密码"
          data-name="oldPassword"
          bindinput="onInputChange"
        />
        <button class="toggle-button" bindtap="togglePassword" data-type="oldPassword">
          {{showOldPassword ? '隐藏' : '显示'}}
        </button>
      </view>
    </view>

    <!-- 新密码 -->
    <view class="form-item">
      <label>新密码:</label>
      <view class="input-container">
        <input
          type="{{showNewPassword ? 'text' : 'password'}}"
          name="newPassword"
          placeholder="请输入新密码"
          data-name="newPassword"
          bindinput="onInputChange"
        />
        <button class="toggle-button" bindtap="togglePassword" data-type="newPassword">
          {{showNewPassword ? '隐藏' : '显示'}}
        </button>
      </view>
    </view>

    <!-- 确认新密码 -->
    <view class="form-item">
      <label>确认新密码:</label>
      <view class="input-container">
        <input
          type="{{showConfirmPassword ? 'text' : 'password'}}"
          name="confirmPassword"
          placeholder="请再次输入新密码"
          data-name="confirmPassword"
          bindinput="onInputChange"
        />
        <button class="toggle-button" bindtap="togglePassword" data-type="confirmPassword">
          {{showConfirmPassword ? '隐藏' : '显示'}}
        </button>
      </view>
    </view>

    <!-- 提交按钮 -->
    <button formType="submit">提交</button>
  </form>
</view>