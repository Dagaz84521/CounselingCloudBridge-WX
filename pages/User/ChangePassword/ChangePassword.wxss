/* pages/User/ChangePassword/ChangePassword.wxss */
/* 页面容器 */
.container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 表单卡片 */
.form-card {
  background-color: white;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 表单项 */
.form-item {
  margin-bottom: 20px;
}

/* 表单项标签 */
.form-label {
  display: block;
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
}

/* 输入框容器 */
.input-container {
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  border-radius: 6px;
  overflow: hidden;
}

/* 输入框 */
.input-container input {
  flex: 1;
  padding: 10px;
  font-size: 14px;
  border: none;
  outline: none;
}

/* 切换按钮 */
.toggle-button {
  padding: 10px;
  background-color: #07c160;
  border: none;
  border-left: 1px solid #ddd;
  color: #f0f0f0;
  font-size: 12px;
  white-space: nowrap;
}

/* 提交按钮 */
.submit-button {
  margin-top: 40rpx; /* 增加顶部间距，向下移动 */
  background-color: #07c160; /* 按钮背景颜色 */
  color: white; /* 按钮文字颜色 */
  font-size: 32rpx; /* 按钮文字大小 */
  border-radius: 16rpx; /* 按钮圆角半径 */
  padding: 20rpx 0; /* 按钮内边距 */
  text-align: center; /* 按钮文字居中 */
  width: 100%; /* 按钮宽度占满父容器 */
}

.submit-button:hover {
  background-color: #05a050;
}