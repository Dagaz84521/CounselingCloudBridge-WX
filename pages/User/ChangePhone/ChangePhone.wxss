/* pages/User/ChangePhone/ChangePhone.wxss */
.container {
  padding: 20px;
}

.current-phone {
  font-size: 16px;
  color: #333;
  margin-bottom: 20px;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  margin-right: 10px;
}

.get-code-btn {
  width: 100px;
  background-color: #07c160;
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 14px;
}

.get-code-btn[disabled] {
  background-color: #ccc;
}

.submit-btn {
  width: 100%;
  background-color: #07c160;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 10px;
  font-size: 16px;
}