/* pages/User/CounselingRecord/CounselingRecord.wxss */
.container {
  padding: 5px;
}

.actions {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
}

.list {
  display: flex;
  flex-direction:column;
  gap: 15px; /* 卡片之间的间距 */
  width:100%;
}

.card {
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 15px;
  display: flex;
  align-items: center;
  width: 100%; /* 卡片占满屏幕宽度 */
  box-sizing: border-box; /* 确保内边距不影响宽度 */
  margin-left: 0; /* 取消左边距 */
}

.checkbox {
  margin-left: 0;
  margin-right: 10px; /* 勾选框与内容之间的间距 */
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
  text-align: left; /* 所有文本左对齐 */
}

.name {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.date {
  font-size: 14px;
  color: #666;
}

.description {
  font-size: 14px;
  color: #444;
  line-height: 1.5;
}