/* 页面容器 */
.user-container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-header {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.nickname {
  font-size: 36rpx;
  color: #333;
}

/* 功能列表 */
.function-list {
  background: white;
  border-radius: 16rpx;
  padding: 0 30rpx;
}

.function-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.function-item:last-child {
  border-bottom: none;
}

.item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.arrow {
  width: 30rpx;
  height: 30rpx;
  margin-left: auto;
}