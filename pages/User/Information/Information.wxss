/* pages/User/Information/Information.wxss */
/* 页面容器 */
.user-container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 头像部分 */
.avatar-section {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx; /* 减少顶部 padding，向上移动 */
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx; /* 减少底部 margin，向上移动 */
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.avatar-section text {
  font-size: 28rpx;
  color: #666;
}

/* 输入部分 */
.input-section {
  display: flex;
  align-items:center;
  height: 100rpx;
  padding: 20rpx 30rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
}

.input-section:last-child {
  border-bottom: none;
}

.input-section text {
  font-size: 32rpx;
  color: #333;
  width: 160rpx; /* 固定左侧文字的宽度 */
}

.input-section input {
  flex: 1;
  margin-left: 20rpx;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: right; /* 输入框内容右对齐 */
}

.picker {
  flex: 1;
  margin-left: 20rpx;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  text-align: right; /* 内容右对齐 */
}

/* 保存按钮 */
.save-button {
  margin-top: 40rpx; /* 增加顶部间距，向下移动 */
  background-color: #07c160; /* 按钮背景颜色 */
  color: white; /* 按钮文字颜色 */
  font-size: 32rpx; /* 按钮文字大小 */
  border-radius: 16rpx; /* 按钮圆角半径 */
  padding: 20rpx 0; /* 按钮内边距 */
  text-align: center; /* 按钮文字居中 */
  width: 100%; /* 按钮宽度占满父容器 */
}

.save-button:hover {
  background-color: #05a050;
}