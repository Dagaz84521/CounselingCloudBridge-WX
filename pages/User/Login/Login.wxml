<view class="login-container">
    <view class="form-wrapper">
      <view class="input-group">
    <input 
      class="input" 
      placeholder="请输入手机号" 
      type="number" 
      maxlength="11"
      bindinput="handlePhoneInput"
      value="{{formData.phone}}"
    />
    <input 
      class="input" 
      placeholder="请输入密码" 
      password
      bindinput="handlePasswordInput"
      value="{{formData.password}}"
    />
  </view>

    <button 
      class="login-btn" 
      bindtap="handleLogin"
      loading="{{isLogging}}"
      disabled="{{isLogging}}"
    >
      {{isLogging ? '登录中...' : '立即登录'}}
    </button>
      
      <view class="extra-links">
        <text class="link-text" bindtap='handleForgetPassword'>忘记密码</text>
        <text class="link-text" bindtap="handleRegister">注册账号</text>
      </view>
    </view>

    <!-- 第三方登录 -->
    <view class="third-party">
      <text class="divider">其他登录方式</text>
      <button class="wechat-btn" bindtap="getUserProfile">
        <image class="wechat-icon" src="/icons/wechat.png"></image>
        微信登录
      </button>
    </view>
</view>