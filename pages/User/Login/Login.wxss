.login-container {
  padding: 60rpx 40rpx;
  min-height: 100vh;
  background: #f8f8f8;
}

.form-wrapper {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
}

.input-group {
  margin-bottom: 60rpx;
}

.input {
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.login-btn {
  background: #07c160;
  color: white;
  border-radius: 50rpx;
  margin: 40rpx 0;
}

.extra-links {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}

.link-text {
  color: #666;
  font-size: 28rpx;
}

.third-party {
  margin-top: 100rpx;
  text-align: center;
}

.divider {
  color: #999;
  display: block;
  margin-bottom: 40rpx;
}

.wechat-btn {
  background: transparent;
  color: #09bb07;
  border: 1rpx solid #09bb07;
  width: 60%;
  margin: 0 auto;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 15rpx;
}