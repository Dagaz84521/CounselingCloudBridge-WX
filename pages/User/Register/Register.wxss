/* pages/User/Register/Register.wxss */
.container {
  padding: 20px;
  background-color: #fff;
  display: inline;
}

/* 表单卡片 */
.form-card {
  background-color: white;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px; /* 卡片间距 */
}

/* 表单项 */
.form-item {
  margin-bottom: 20px;
}

/* 表单项标签 */
.form-label {
  display: block;
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
}

/* 输入框容器 */
.input-container {
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  border-radius: 6px;
  overflow: hidden;
}

/* 输入框 */
.input-container input {
  flex: 1;
  padding: 10px;
  font-size: 14px;
  border: none;
  outline: none;
}

/* 切换按钮 */
.toggle-button {
  padding: 10px;
  background-color: #07c160;
  border: none;
  border-left: 1px solid #ddd;
  color: #f0f0f0;
  font-size: 12px;
  white-space: nowrap;
}

/* 提交按钮 */
.submit-button {
  background-color: #07c160;
  color: white;
  font-size: 16px;
  border-radius: 8px;
  padding: 10px 0;
  text-align: center;
  width: 100%;
}

.submit-button:hover {
  background-color: #05a050;
}