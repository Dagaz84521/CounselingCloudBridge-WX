<!--pages/User/ResetPassword/ResetPassword.wxml-->
<view class="container">
  <form bindsubmit="onSubmit">
      <!-- 手机号 -->
      <view class="form-card">
      <label class="form-label">手机号:</label>
      <view class="input-container">
        <input
          name="phoneNumber"
          placeholder="请输入手机号"
          data-name="phoneNumber"
          bindinput="onInputChange"
        />
      </view>
    </view>

      <!-- 验证码 -->
    <view class="form-card">
      <label class="form-label">验证码:</label>
      <view class="input-container">
        <input
          name="captcha"
          placeholder="请输入验证码"
          data-name="captcha"
          bindinput="onInputChange"
        />
        <button 
          class="send-captcha-button" 
          bindtap="sendCaptcha" 
          disabled="{{isSending}}"
        >
          {{isSending ? '发送中...' : '获取验证码'}}
        </button>
      </view>
    </view>

      <!-- 新密码 -->
      <view class="form-card">
        <label class="form-label">新密码:</label>
        <view class="input-container">
          <input
            type="{{showNewPassword ? 'text' : 'password'}}"
            name="newPassword"
            placeholder="请输入新密码"
            data-name="newPassword"
            bindinput="onInputChange"
          />
          <button class="toggle-button" bindtap="togglePassword" data-type="newPassword">
            {{showNewPassword ? '隐藏' : '显示'}}
          </button>
        </view>
      </view>

      <!-- 确认新密码 -->
      <view class="form-card">
        <label class="form-label">确认新密码:</label>
        <view class="input-container">
          <input
            type="{{showConfirmPassword ? 'text' : 'password'}}"
            name="confirmPassword"
            placeholder="请再次输入新密码"
            data-name="confirmPassword"
            bindinput="onInputChange"
          />
          <button class="toggle-button" bindtap="togglePassword" data-type="confirmPassword">
            {{showConfirmPassword ? '隐藏' : '显示'}}
          </button>
        </view>
      </view>

    <!-- 提交按钮 -->
    <view class="container">
      <button class="submit-button" formType="submit">提交</button>
    </view>
  </form>
</view>